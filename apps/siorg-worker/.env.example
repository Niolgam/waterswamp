# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/waterswamp

# SIORG API Configuration
SIORG_API_URL=https://estruturaorganizacional.dados.gov.br/doc
# SIORG_API_TOKEN não é necessário — a API é pública e não exige autenticação

# Worker Configuration
WORKER_BATCH_SIZE=10
WORKER_POLL_INTERVAL_SECS=5
WORKER_MAX_RETRIES=3
WORKER_RETRY_BASE_DELAY_MS=1000
WORKER_RETRY_MAX_DELAY_MS=60000
WORKER_ENABLE_CLEANUP=true
WORKER_CLEANUP_INTERVAL_SECS=3600

# Logging Configuration
RUST_LOG=info,siorg_worker=debug,application::workers=debug
LOG_FORMAT=text  # or 'json' for production
